<UserControl x:Class="BirdsWPF.Views.UserControls.SpeciesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BirdsWPF.Views.UserControls"
             xmlns:vm="clr-namespace:BirdsViewModels;assembly=BirdsViewModels"
             xmlns:comm="clr-namespace:BirdsCommon;assembly=BirdsCommon"
             xmlns:rep="clr-namespace:BirdsCommon.Repository;assembly=BirdsCommon"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:SpeciesViewModel, 
                                              IsDesignTimeCreatable=False}">
    <UniformGrid Columns="2">
        <ListBox x:Name="speciesList" ItemsSource="{Binding Species, Mode=OneWay, Source={StaticResource mainVM}}"
                 SelectionChanged="OnSelectedSpecieChanged">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type rep:Specie}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsSelected,
                                                      Mode=TwoWay,
                                                      RelativeSource={RelativeSource FindAncestor,
                                                                                     AncestorType={x:Type ListBoxItem}}}"
                                  VerticalAlignment="Center">
                            <CheckBox.Content>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}: {1}">
                                            <Binding Path="Id"/>
                                            <Binding Path="Name"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>
                        <Button Content="Редактировать" Margin="5"
                                Command="{Binding EditSpecieCommand, Mode=OneWay, Source={StaticResource mainVM}}"
                                CommandParameter="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
        <ItemsControl ItemsSource="{Binding Mode=OneWay, Source={StaticResource birds}}"
                      DisplayMemberPath="Name"
                      Margin="10"
                      Foreground="White"/>
    </UniformGrid>
</UserControl>
