<UserControl x:Class="BirdsWPF.Views.UserControls.BirdsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BirdsWPF.Views.UserControls"
             xmlns:vm="clr-namespace:BirdsViewModels;assembly=BirdsViewModelsStandard"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <!--d:DataContext="{d:DesignInstance Type=vm:BirdsViewModel, 
                                              IsDesignTimeCreatable=False}">-->
    <!--xmlns:rep="clr-namespace:BirdsCommon.Repository;assembly=BirdsCommon"-->
    <ScrollViewer VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Hidden"
                  Focusable="False">

        <StackPanel>

            <StackPanel>
                <TextBlock Text="{Binding Count,
                                          StringFormat=Total number of birds: {0},
                                          Mode=OneWay,
                                          Source={StaticResource birds}}"
                           Margin="0 0 0 20"
                           Foreground="White"
                           FontSize="24"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />

                <ComboBox ItemsSource="{Binding BirdNamesToShow,
                                                Source={StaticResource mainVM}}"
                          SelectedValue="{Binding Name,
                                                  Source={StaticResource mainVM}}" />

                <Button    Content="Show only"
                           Command="{Binding ShowOnlyCommand,
                                             Mode=OneWay, 
                                             Source={StaticResource mainVM}}"
                           Style="{StaticResource AddBirdButton}" />

            </StackPanel>

            <ItemsControl ItemsSource="{Binding Mode=OneWay, Source={StaticResource birds}}"
                          Margin="0 0 0 0">
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="vm:IdBirdVM">
                        <local:Bird Name="qwerty"
                                    IsActive="False" />
                        <local:Bird Name="asdfg"
                                    IsActive="True" />
                        <local:Bird Name="zxcvb" />
                        <local:Bird Name="yuiop"
                                    IsActive="True" />
                    </x:Array>
                </d:ItemsControl.ItemsSource>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:IdBirdVM}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="40 10 30 30"
                                    DataContext="{Binding ModelEntity}">

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                       Text="{Binding Name}" />

                            <TextBlock Text="{Binding Description}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock"
                                           BasedOn="{StaticResource TextBlockOnBirdsStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description}"
                                                         Value="">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                       Text="{Binding Arrival, ConverterCulture=ru-ru}" />

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                       Text="⚊" />

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                       Text="{Binding Departure, ConverterCulture=ru-ru}" />

                            <ComboBox ItemsSource="{Binding Species, Source={StaticResource mainVM}}"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding SpecieId, Mode=OneWay}"
                                      DisplayMemberPath="ModelEntity.Name">
                            </ComboBox>


                            <StackPanel Margin="0 0 10 0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}"
                                                         Value="False">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <Button Style="{DynamicResource DeleteButtonStyle}" 
                                        Content="Удалить"
                                        Command="{Binding DeleteBirdCommand, 
                                                          Mode=OneWay, 
                                                          Source={StaticResource mainVM}}"
                                        CommandParameter="{Binding}">
                                </Button>

                                <TextBox Style="{DynamicResource TextBoxBirdsStyle}"
                                         Text="{Binding Departure,
                                                        ConverterCulture=ru-ru,
                                                        Source={StaticResource mainVM}}" />

                            </StackPanel>
                            <Button Style="{DynamicResource DeleteButtonStyle}" 
                                    Command="{Binding RemoveBirdCommand, 
                                                      Mode=OneWay, 
                                                      Source={StaticResource mainVM}}"
                                    CommandParameter="{Binding}"
                                    Height="{Binding ActualWidth,
                                                     Mode=OneWay,
                                                     RelativeSource={RelativeSource Self}}">
                                <Image VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Source="/wwwroot/Images/file_basket_red.png"
                                       Width="30" />
                            </Button>

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
