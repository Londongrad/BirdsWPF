<UserControl x:Class="BirdsWPF.Views.UserControls.EditSpecieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BirdsWPF.Views.UserControls"
             xmlns:vm="clr-namespace:BirdsViewModels;assembly=BirdsViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:EditSpecieViewModel, 
                                              IsDesignTimeCreatable=False}">
    
    <StackPanel>
        <TextBlock Text="{Binding SpecieId}" Margin="10" HorizontalAlignment="Center"
                   FontSize="15" Foreground="White"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="10" MinWidth="200"/>
        <Button Content="Обновить" Margin="10" Padding="15 5"
                HorizontalAlignment="Center"
                Command="{Binding UpdateSpecieCommand, Mode=OneWay, Source={StaticResource mainVM}}"
                CommandParameter="{Binding}"/>
    </StackPanel>
</UserControl>
