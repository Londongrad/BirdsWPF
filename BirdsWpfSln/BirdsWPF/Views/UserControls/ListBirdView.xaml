<UserControl x:Class="BirdsWPF.Views.UserControls.ListBirdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BirdsWPF.Views.UserControls"
             xmlns:rep="clr-namespace:BirdsCommon.Repository;assembly=BirdsCommon"
             xmlns:vm="clr-namespace:BirdsViewModels;assembly=BirdsViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.CommandBindings>
        <CommandBinding Command="BrowseBack" CanExecute="OnBackCanExecute" Executed="OnBackExecute"/>
        <CommandBinding Command="BrowseForward" CanExecute="OnForwardCanExecute" Executed="OnForwardExecute"/>
    </FrameworkElement.CommandBindings>
    <Grid>
        <ListBox Name="listBirds" ItemsSource="{Binding Mode=OneWay, Source={StaticResource birds}}"
                 Visibility="Hidden"/>
        <ContentControl Content="{Binding SelectedItem, ElementName=listBirds}">
            <d:ContentControl.Content>
                <local:Bird Name="qwerty" IsActive="False" />
            </d:ContentControl.Content>
            <ContentControl.ContentTemplate>
                <DataTemplate DataType="{x:Type rep:Bird}">
                    <StackPanel>
                        <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                                   Text="Bird's type" />

                        <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                       Tag="{Binding SpecieId, Converter={StaticResource intToSpecie}, Mode=OneWay}"
                                       Text="{Binding Tag.Name, RelativeSource={RelativeSource Self}}"
                                       MinWidth="20"/>


                        <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                   Text="Description" />

                        <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                 Text="{Binding Description}" />


                        <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                   Text="Arrival" />

                        <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                 Text="{Binding Arrival, 
                                ConverterCulture=ru-ru}" />

                        <Grid>
                            <Button Content="Предыдущий"
                                    Command="BrowseBack"
                                    Style="{StaticResource AddBirdButton}" HorizontalAlignment="Left" />
                            <Button Content="Следующий"
                                    Command="BrowseForward"
                                    Style="{StaticResource AddBirdButton}" HorizontalAlignment="Right" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</UserControl>
